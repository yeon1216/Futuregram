<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/loginMemberChatTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:background="@drawable/chat_balloon"
        android:layout_gravity="right"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:text="안녕aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textSize="16sp"
        android:textColor="#000000"
        />
        <!--android:visibility="gone"-->

    <TextView
        android:id="@+id/chatMemberChatTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_balloon2"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="100dp"
        android:text="안녕aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textSize="16sp"
        android:textColor="#000000"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/loginMemberChatTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="8sp"
        android:text="19. 7. 14 14시 31분"
        />

    <TextView
        android:id="@+id/chatMemberChatTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="19. 7. 14 14시 31분"
        android:textSize="8sp"
        android:visibility="gone"
        />

</LinearLayout>