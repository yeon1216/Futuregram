<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/memberProfileImageIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/default_profile"/>

            <TextView
                android:layout_weight="8"
                android:id="@+id/memberIdTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="member3"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/editIconIV"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dot3_icon"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/boardImageIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="500dp"
            android:adjustViewBounds="true"
            android:src="@drawable/hope"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/redHartIconIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/red_hart"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/emptyHartIconIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/empty_hart"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/replyIconIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/reply_icon"/>

        </LinearLayout>

    <TextView
        android:id="@+id/likeCountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="좋아요 42개"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/boardContentTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="저는 실력있는 개발자가 될거에요. #개발자 #목표 #꿈 #팀노바 #화이팅"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/boardContentDetailTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="더보기..."
        android:textSize="16sp"
        android:textStyle="italic"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/registerLocationTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textSize="11sp"
        android:textStyle="italic"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/replyCountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="17개 댓글 모두보기..."
        android:textSize="14sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/boardTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="right"
        android:text="2019.7.1 12:13"
        android:textSize="12sp"/>

</LinearLayout>